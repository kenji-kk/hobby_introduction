<li id="micropost-<%= post.id %>">
  <span class="user">名前 <%= link_to post.user.name, post.user %></span>
  <span class="content">ジャンル <%= post.genre %></span>
  <span class="content">タイトル <%= post.title %></span>
  <span class="content">内容 <%= post.content %></span>
  <span class="content"><%= link_to "掲示板", post_path(post.id) %></li></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span>
</li>